@model Funds
<div class="row">
    <div class="col-md-8">
        <form asp-action="UpdateMainFund" method="post">
            <div class="form-group">
                <label class="control-label">Main Fund</label>
                <input class="form-control" asp-for="@Model.FundName" />
                <input type="hidden" asp-for="@Model.Id" />
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-success">Update</button>
            </div>
            
        </form>
    </div>
</div>