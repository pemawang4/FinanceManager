@{
}

<a asp-action="CreateFund" asp-controller="Fund" class="btn btn-success mb-3">Create Main Fund</a>

@model List<Funds>

<table class="table table-striped">
    <thead>
        <tr>
            <th>#</th>
            <th>Fund Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{
            if (Model.Count > 0)
            {
                int i = 0;
                foreach (var item in Model)
                {
                    <tr>
                        <td>@(i + 1)</td>
                        <td>@item.FundName</td>
                        <td>
                            <a class="btn btn-primary btn-sm" asp-action="EditMainFund" asp-route-Id="@item.Id" asp-controller="Fund">Edit</a>
                            <a class="btn btn-danger btn-sm" asp-action="DeleteMainFund" asp-route-Id="@item.Id" asp-controller="Fund" onclick="return confirm('Are you sure want to delete this fund?')">Delete</a>
                        </td>
                    </tr>
                    i++;
                }
            }
            else
            {
                <tr>
                    <td colspan="3">No data available</td>
                </tr>
            }
        }

    </tbody>
</table>
